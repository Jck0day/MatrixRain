<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <EditText
        android:visibility="gone"
        android:id="@+id/layoutHook"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Layout to hook"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
         />

    <EditText
        android:visibility="gone"
        android:id="@+id/layoutType"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Layout type"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        />

    <EditText
        android:visibility="gone"
        android:id="@+id/objectId"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Object id to edit (leave blank for liparam.view)"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        />

    <EditText
        android:id="@+id/index"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Index (0 for last position)"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/overrideIsPaused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Override isPaused"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/leaveAndSave"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Leave and Save"
        android:textColor="@android:color/white"
        android:background="@drawable/shape"/>
</LinearLayout>